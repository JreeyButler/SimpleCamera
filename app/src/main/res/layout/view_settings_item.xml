<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/settings_icon"
        android:layout_width="@dimen/size_settings_icon"
        android:layout_height="@dimen/size_settings_icon"
        android:layout_alignParentStart="true"
        android:layout_margin="@dimen/normal_margin"
        android:src="@drawable/ic_location_gray" />

    <TextView
        android:id="@+id/settings_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_toEndOf="@id/settings_icon"
        android:padding="@dimen/normal_margin"
        android:text="@string/app_name"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/settings_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@id/settings_more"
        android:gravity="center"
        android:padding="@dimen/normal_margin"
        android:text="@string/app_name"
        android:textColor="@android:color/darker_gray" />


    <ImageView
        android:id="@+id/settings_more"
        android:layout_width="@dimen/size_settings_icon"
        android:layout_height="@dimen/size_settings_icon"
        android:layout_alignParentEnd="true"
        android:layout_margin="@dimen/normal_margin"
        android:src="@drawable/ic_settings_more_gray" />

</RelativeLayout>